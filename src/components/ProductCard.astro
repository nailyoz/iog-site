---
export interface Props {
  href: string;
  icon: string;
  title: string;
  description: string;
  buttonText?: string;
}

const { href, icon, title, description, buttonText = "Ver Mais" } = Astro.props;
---

<a href={href} class="product-item">
  <div class="product-img content-center" set:html={icon} />
  <h3>{title}</h3>
  <p>{description}</p>
  <button>{buttonText}</button>

  <style>
    .product-item {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: space-between;
      text-align: center;
      width: 100%;
      max-width: 20rem;
      padding: 2rem;
      margin: 0 auto;
      border: 2px solid var(--border-color, #575b72);
      border-radius: 8px;
      background: linear-gradient(to bottom, #2778aa, #1a5174);
      text-decoration: none;
      transition:
        transform 0.3s ease,
        box-shadow 0.3s ease;
      gap: 0.75rem;
    }

    .product-item:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
    }

    .product-img {
      width: clamp(5rem, 10vw, 8rem);
      height: clamp(5rem, 10vw, 8rem);
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .product-img svg {
      width: 100%;
      height: 100%;
      object-fit: contain;
      fill: white;
    }

    .product-item p,
    h3 {
      color: white;
    }
    @media (max-width: 900px) {
      .product-item {
        max-width: 18rem;
        padding: 1.5rem;
      }
    }

    @media (max-width: 600px) {
      .product-item {
        max-width: 100%;
        padding: 1.25rem;
      }

      .product-img {
        width: 5rem;
        height: 5rem;
      }

      button {
        width: 100%;
        font-size: 0.9rem;
      }
    }
  </style>
</a>
