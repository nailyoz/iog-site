---
export interface Props {
  href: string;
  icon: string;
  title: string;
  description: string;
  buttonText?: string;
}

const { href, icon, title, description, buttonText = "Ver Mais" } = Astro.props;
---

<a href={href} class="product-item">
  <div class="product-img content-center" set:html={icon} />
  <h3>{title}</h3>
  <p>{description}</p>
  <button>{buttonText}</button>

  <style>
    .product-item {
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 20rem;
      padding: 2em;
      height: auto;
      text-decoration: none;
      transition: transform 0.3s ease;
      text-align: center;
      gap: 0.5rem;
      border: 2px solid var(--border-color);
      border-radius: 4px;
    }

    .product-item:hover {
      transform: scale(1.05);
    }

    .product-img {
      width: 8rem;
      height: 8rem;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .product-img svg {
      max-width: 100%;
      max-height: 100%;
      width: 100%;
      height: 100%;
      object-fit: contain;
    }
  </style>
</a>
