              href="produtos/dispositivos"
            />
          </div>
        </div>
      </div>
    </section>
    <section id="contact-us" class="center-everything">
      <ContactUs />
    </section>
  </div>
</Layout>

<style>
  main {
    width: 100%;
  }
  #hero {
    height: 40vh;
    background: linear-gradient(
      360deg,
      rgba(0, 0, 0, 0) 0%,
      rgba(0, 0, 0, 1) 50%,
      rgba(0, 0, 0, 0) 100%
    );
  }

  .card .logo {
    height: 3rem;
    margin-bottom: 1rem;
  }

  .products-list {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 2rem;
  }

  @keyframes scroll-left {
    0% {
      transform: translateX(100%);
    }
    100% {
      transform: translateX(-100%);
    }
  }

  @media (max-width: 900px) {
    #hero {
      height: auto;
      padding: 4rem 1rem;
    }

    .card {
      padding: 1.5rem;
    }

    .products-list {
      flex-direction: column;
      align-items: center;
    }
  }

  @media (max-width: 600px) {
    .card h2 {
      font-size: 1.75rem;
    }

    .card p {
      font-size: 1rem;
    }

    .card button {
      width: 100%;
      font-size: 1rem;
    }

    .card .logo {
      height: 2.5rem;
    }
  }
</style>
